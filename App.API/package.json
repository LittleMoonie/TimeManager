{
  "name": "gogotime-api",
  "version": "1.0.0",
  "private": true,
  "author": "Lazaro, Alexy, Massi, Lounis",
  "description": "API for T-DEV-700 Project for Epitech",
  "scripts": {
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint-staged": "lint-staged",
    "test": "jest --coverage --runInBand --detectOpenHandles",
    "dev": "ts-node-dev --respawn --transpile-only ./index.ts",
    "seed": "ts-node Server/Seed.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "pm2 start ecosystem.config.cjs --only GoGoTime-API",
    "start:dev": "pm2 start ecosystem.cjs --only GoGoTime-API-dev",
    "typeorm": "node --require ts-node/register --require reflect-metadata --require dotenv/config ./node_modules/typeorm/cli.js",
    "migrate:generate": "yarn typeorm migration:generate -d ./Server/Database.ts",
    "migrate:show": "yarn typeorm migration:show -d ./Server/Database.ts",
    "migrate:up": "yarn typeorm migration:run -d ./Server/Database.ts",
    "migrate:down": "yarn typeorm migration:revert -d ./Server/Database.ts",
    "api:client": "yarn dlx openapi-typescript-codegen --input swagger.json --output ../App.Web/src/lib/api --client axios --useOptions",
    "api:generate": "ts-node -r tsconfig-paths/register ./node_modules/.bin/tsoa routes && ts-node -r tsconfig-paths/register ./node_modules/.bin/tsoa spec",
    "api:sync": "yarn api:generate && cd ../App.Web && yarn api:client"
  },
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^11.0.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pg-query-stream": "^4.10.3",
    "pm2": "^5.4.3",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.5",
    "tsoa": "^6.6.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.27",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.10",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "class-validator": "^0.14.2",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=24.9.0",
    "yarn": ">=4.10.3"
  },
  "eslintConfig": {
    "extends": "../../eslint.config.js"
  }
}
