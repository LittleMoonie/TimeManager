{
  "name": "gogotime-api",
  "version": "1.0.0",
  "private": true,
  "author": "Lazaro, Alexy, Massi, Lounis",
  "description": "API for T-DEV-700 Project for Epitech",
  "main": "build/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "pm2 start ecosystem.config.cjs --only GoGoTime-API",
    "start:dev": "pm2 start ecosystem.config.cjs --only GoGoTime-API-dev",
    "lint": "eslint src --ext .ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "openapi:generate": "tsoa spec-and-routes",
    "openapi:spec-only": "tsoa spec",
    "openapi:routes-only": "tsoa routes",
    "api:generate": "yarn openapi:generate",
    "api:generate-full": "yarn openapi:generate && cd ../App.Web && yarn api:client",
    "api:sync": "yarn api:generate-full"
  },
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.7.0",
    "eslint-config-love": "^130.0.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=24.9.0",
    "yarn": ">=4.10.3"
  }
}
