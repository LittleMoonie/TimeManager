{
  "name": "gogotime-api",
  "version": "1.0.0",
  "private": true,
  "author": "Lazaro, Alexy, Massi, Lounis",
  "description": "API for T-DEV-700 Project for Epitech",
  "main": "build/index.js",
  "scripts": {
    "test": "jest --coverage --runInBand --detectOpenHandles",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "seed": "ts-node server/seed.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "pm2 start ecosystem.config.cjs --only GoGoTime-API",
    "start:dev": "pm2 start ecosystem.cjs --only GoGoTime-API-dev",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"./**/*.{ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "typeorm": "node --require ts-node/register --require reflect-metadata --require dotenv/config ./node_modules/typeorm/cli.js",
    "migrate:generate": "yarn typeorm migration:generate -d ./Server/Database.ts ./Migrations/$npm_config_name",
    "migrate:show": "yarn typeorm migration:show -d ./Server/Database.ts",
    "migrate:up": "yarn typeorm migration:run -d ./Server/Database.ts",
    "migrate:down": "yarn typeorm migration:revert -d ./Server/Database.ts",
    "api:generate": "tsoa spec-and-routes",
    "api:sync": "yarn api:generate && cd ../App.Web && yarn api:client"
  },
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pm2": "^5.4.3",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.5",
    "tsoa": "^6.0.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.27",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.5.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.8",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "class-validator": "^0.14.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.7.0",
    "eslint-config-love": "^130.0.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=24.9.0",
    "yarn": ">=4.10.3"
  }
}
