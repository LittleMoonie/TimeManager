{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "Controllers/**/*.ts",
    "Dtos/**/*.ts",
    "Entities/**/*.ts",
    "Repositories/**/*.ts",
    "Services/**/*.ts",
    "Server/**/*.ts",
    "Utils/**/*.ts",
    "Errors/**/*.ts"
  ],
  "exclude": ["node_modules", "build", "dist", "coverage"]
}
