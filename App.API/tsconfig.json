{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Controllers/*": ["Controllers/*"],
      "@Routes/*": ["Routes/*"],
      "@Services/*": ["Services/*"],
      "@Entities/*": ["Entities/*"],
      "@/*": ["*"]
    }
  },
  "include": ["**/*.ts", "Types/**/*.d.ts", "index.ts"],
  "exclude": ["node_modules", "build"]
}
