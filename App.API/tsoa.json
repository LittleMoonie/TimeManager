{
  "entryFile": "index.ts",
  "noImplicitAdditionalProperties": "throw",
  "controllerPathGlobs": ["Controllers/**/*.ts"],
  "spec": {
    "outputDirectory": ".",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Authorization header using the Bearer scheme."
      }
    },
    "info": {
      "title": "GoGoTime API",
      "version": "1.0.0",
      "description": "API documentation for GoGoTime project",
      "contact": {
        "name": "GoGoTime Team",
        "email": "team@gogotime.com"
      }
    },
    "host": "localhost:4000",
    "basePath": "/",
    "schemes": ["http", "https"]
  },
  "routes": {
    "routesDir": "Routes/generated",
    "authenticationModule": "./Config/Auth.ts"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  }
}
