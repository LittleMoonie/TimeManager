{
  "entryFile": "Server/index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["Controllers/**/*.ts"],
  "iocModule": "Server/IoC.ts",
  "spec": {
    "outputDirectory": "dist",
    "specVersion": 3,
    "basePath": "/api",
    "specFileBaseName": "swagger",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT token for authorization. Use 'Bearer {token}'."
      }
    }
  },
  "routes": {
    "routesDir": "Routes/Generated",
    "routePrefix": "/api",
    "middleware": "express"
  }
}
